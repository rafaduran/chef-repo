{ 
    "couchdb": {
        "couchdb": {
            "admin_name": "admin",
            "admin_password": "pass"
        },
        "nginx": {
            "worker_processes": 4,
            "client_max_body_size" :"5M"
        },
        "run_list": ["recipe[nginx::couchdb-proxy]", "recipe[couchdb::crawler]"]
    },
    "common": {
        "mysql": {
            "server_root_password": "pass",
            "allow_remote_root": true,
            "bind_address": "0.0.0.0"
        },
        "run_list": ["recipe[mysql::server]","recipe[memcached]"]
    },
    "worker1": {
        "celery": {
            "command": "/opt/rdc-web-crawler/tools/with_venv.sh python /opt/rdc-web-crawler/rdc_crawler/manage.py celeryd",
            "user": "crawler",
            "group": "crawler",
            "virtualenv": "/opt/rdc-web-crawler/.crawler-venv",
            "beat": false,
            "workers": 2
        },
        "crawler": {
            "ssh_keys": ["ssh-rsa  crawler insecure public key"],
            "develop": false
        },
        "run_list": ["recipe[crawler]","recipe[celery]"]
    },
    "worker2": {
        "celery": {
            "command": "/opt/rdc-web-crawler/tools/with_venv.sh python /opt/rdc-web-crawler/rdc_crawler/manage.py celeryd",
            "user": "crawler",
            "group": "crawler",
            "virtualenv": "/opt/rdc-web-crawler/.crawler-venv",
            "beat": false,
            "workers": 2
        },
        "crawler": {
            "ssh_keys": ["ssh-rsa  crawler insecure public key"],
            "develop": false
        },
        "run_list": ["recipe[crawler]","recipe[celery]"]
    },
    "worker3": {
        "celery": {
            "command": "/opt/rdc-web-crawler/tools/with_venv.sh python /opt/rdc-web-crawler/rdc_crawler/manage.py celeryd",
            "user": "crawler",
            "group": "crawler",
            "virtualenv": "/opt/rdc-web-crawler/.crawler-venv",
            "beat": false,
            "workers": 2
        },
        "crawler": {
            "ssh_keys": ["ssh-rsa  crawler insecure public key"],
            "develop": false
        },
        "run_list": ["recipe[crawler]","recipe[celery]"]
    },
    "webind": {
        "crawler": {
            "ssh_keys": ["ssh-rsa  crawler insecure public key"],
            "develop": false,
            "log_level": "info",
            "gunicorn_worker_class": "gevent",
            "gunicorn_workers": 2
        },
        "nginx": {
            "template": "gunicorn-proxy/default-site.erb",
            "gunicorn_port": 8000
        },
        "run_list": ["recipe[crawler::indexer]","recipe[crawler::web]", "recipe[nginx]"]
    }
}
